<!-- Define a function to render the book -->
<% function renderBook(book) { %>
  <div class="item-details">
    <article class="book-details">
      <h2>Title: <%= book.title %></h2>
      <p>
        <strong>Author:</strong> <%= book.author %><br />
        <strong>Genre:</strong> <%= book.genre %>
      </p>
  
      <!-- Update button -->
      <div class="btn-update-delete">
      <form
        class="action-form"
        method="GET"
        action="/single-book/update/<%= book._id %>">
        <button type="submit" class="update">Update</button>
      </form>
  
      <!-- Delete button -->
      <form
        class="action-form"
        method="POST"
        action="/single-book/<%= book._id %>?_method=DELETE">
        <button type="submit">Delete</button>
      </form>
    </div>
    </article>
  </div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: book.title }) %>
  <body>
    <%- include('partials/navbar.ejs') %>
    
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (book) { %>
            <%= renderBook(book) %>
          <% } else { %>
            <p>No book found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('partials/footer.ejs') %>
  </body>
</html>